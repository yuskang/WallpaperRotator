<Window x:Class="WallpaperRotator.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WallpaperRotator 設定"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="WallpaperRotator 設定"
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Content -->
        <TabControl Grid.Row="1">
            <!-- 一般設定 -->
            <TabItem Header="一般">
                <StackPanel Margin="15">
                    <CheckBox Content="啟用自動切換"
                              IsChecked="{Binding Enabled}"
                              Margin="0,10"/>
                    <CheckBox Content="開機時自動啟動"
                              IsChecked="{Binding StartWithWindows}"
                              Margin="0,10"/>

                    <TextBlock Text="顯示模式:" Margin="0,20,0,5"/>
                    <ComboBox ItemsSource="{Binding DisplayModes}"
                              SelectedItem="{Binding DisplayMode}"
                              Width="200" HorizontalAlignment="Left"/>

                    <TextBlock Text="背景顏色 (留白區):" Margin="0,20,0,5"/>
                    <TextBox Text="{Binding BackgroundColor}"
                             Width="100" HorizontalAlignment="Left"/>

                    <TextBlock Text="過渡動畫時間 (毫秒):" Margin="0,20,0,5"/>
                    <TextBox Text="{Binding TransitionDurationMs}"
                             Width="100" HorizontalAlignment="Left"/>
                </StackPanel>
            </TabItem>

            <!-- 桌布設定 -->
            <TabItem Header="桌布">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 橫向桌布 -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="橫向桌布" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Height="150">
                            <Image x:Name="LandscapePreview" Stretch="Uniform"/>
                        </Border>
                        <TextBox Text="{Binding LandscapeImagePath}"
                                 IsReadOnly="True" Margin="0,10,0,5"/>
                        <Button Content="瀏覽..."
                                Command="{Binding BrowseLandscapeCommand}"
                                Width="80" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- 直向桌布 -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="直向桌布" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Height="150">
                            <Image x:Name="PortraitPreview" Stretch="Uniform"/>
                        </Border>
                        <TextBox Text="{Binding PortraitImagePath}"
                                 IsReadOnly="True" Margin="0,10,0,5"/>
                        <Button Content="瀏覽..."
                                Command="{Binding BrowsePortraitCommand}"
                                Width="80" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- 關於 -->
            <TabItem Header="關於">
                <StackPanel Margin="15" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="WallpaperRotator" FontSize="28" FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="v2.0.0" FontSize="16" Foreground="Gray"
                               HorizontalAlignment="Center" Margin="0,5,0,20"/>
                    <TextBlock Text="Windows 平板螢幕旋轉自動切換桌布工具"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="適用於 Fujitsu Q7311 / Surface 等平板電腦"
                               Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="重設" Command="{Binding ResetCommand}"
                    Width="80" Margin="0,0,10,0"/>
            <Button Content="取消" Command="{Binding CancelCommand}"
                    Width="80" Margin="0,0,10,0"/>
            <Button Content="儲存" Command="{Binding SaveCommand}"
                    Width="80" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
