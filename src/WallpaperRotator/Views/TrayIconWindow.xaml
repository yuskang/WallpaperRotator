<Window x:Class="WallpaperRotator.Views.TrayIconWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="WallpaperRotator"
        Visibility="Hidden"
        ShowInTaskbar="False"
        WindowStyle="None"
        Width="0" Height="0">

    <Grid>
        <tb:TaskbarIcon x:Name="TrayIcon"
                        ToolTipText="{Binding ToolTipText}"
                        DoubleClickCommand="{Binding ToggleEnabledCommand}">

            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{Binding StatusText}" IsEnabled="False" FontWeight="Bold"/>
                    <Separator/>
                    <MenuItem Header="啟用自動切換"
                              IsCheckable="True"
                              IsChecked="{Binding IsEnabled, Mode=TwoWay}"/>
                    <Separator/>
                    <MenuItem Header="立即切換: 橫向" Command="{Binding SwitchToLandscapeCommand}"/>
                    <MenuItem Header="立即切換: 直向" Command="{Binding SwitchToPortraitCommand}"/>
                    <Separator/>
                    <MenuItem Header="設定..." Command="{Binding OpenSettingsCommand}"/>
                    <Separator/>
                    <MenuItem Header="結束" Command="{Binding ExitCommand}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
